<script>
	// script TermsFeed pour la gestion des cookies.
document.addEventListener('DOMContentLoaded', function () { // Gérer le clic sur le bouton "Gérer mes cookies" (pour le centre de préférences)
const manageBtn = document.getElementById('btn-manage-cookies');
if (manageBtn) {
manageBtn.addEventListener('click', function () {
if (typeof cookieconsent !== 'undefined' && typeof cookieconsent.showPreferencesCenter === 'function') {
cookieconsent.showPreferencesCenter();
} else {
console.error("TermsFeed (cookieconsent) n'est pas prêt.");
}
});
}

// Gérer le clic sur le lien "Modifier mes préférences cookies"
const preferencesLink = document.getElementById('open_preferences_center');
if (preferencesLink) {
preferencesLink.addEventListener('click', function (e) {
e.preventDefault();
if (typeof cookieconsent !== 'undefined' && typeof cookieconsent.showPreferencesCenter === 'function') {
cookieconsent.showPreferencesCenter();
} else {
console.error("TermsFeed (cookieconsent) n'est pas prêt.");
}
});
}
});
</script>
