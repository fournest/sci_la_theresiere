{% extends 'base.html.twig' %}

{% block title %}Tarif
{% endblock %}

{% block body %}
	<h1>Tarif</h1>

	<div class="tarif-details-container">
		<ul class="tarif-details-list">
			<li class="detail-item">
				<strong>Prix de la réservation :</strong>
				<span>{{ tarif.prixReservation }}
					€</span>
			</li>
			<li class="detail-item">
				<strong>Prix de l'option :</strong>
				<span>{{ tarif.prixOption }}
					€</span>
			</li>
		</ul>
	</div>

	<a class="btn-principal" href="{{ path('app_tarif_index') }}">Retour à la liste</a>

	<a class="btn-principal" href="{{ path('app_tarif_edit', {'id': tarif.id}) }}">Modifier</a>

	{{ include('tarif/_delete_form.html.twig') }}
{% endblock %}
