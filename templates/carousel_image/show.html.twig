{% extends 'base.html.twig' %}

{% block title %}Image Carrousel{% endblock %}

{% block body %}
    <h1>Détails de l'Image Carrousel</h1>

    <div style="margin-bottom: 20px;">
        {# AFFICHAGE DE L'IMAGE #}
        <img src="{{ asset('uploads/carousel/' ~ carousel_image.filename) }}" alt="Image Carrousel" style="max-width: 400px; height: auto; border: 1px solid #ccc;">
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel_image.id }}</td>
            </tr>
            <tr>
                <th>Nom du Fichier</th>
                <td>{{ carousel_image.filename }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ carousel_image.ordre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_carousel_image_index') }}">Retour à la liste</a>
    <a href="{{ path('app_carousel_image_edit', {'id': carousel_image.id}) }}">Modifier</a>

    {{ include('carousel_image/_delete_form.html.twig') }}
{% endblock %}