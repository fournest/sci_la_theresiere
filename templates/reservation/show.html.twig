{% extends 'base.html.twig' %}

{% block title %}Votre réservation{% endblock %}

{% block body %}
    <h1>Votre réeservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>DateResa</th>
                <td>{{ reservation.dateResa ? reservation.dateResa|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UtilisateurId</th>
                <td>{{ reservation.utilisateurId }}</td>
            </tr>
            <tr>
                <th>DossierResa</th>
                <td>{{ reservation.dossierResa }}</td>
            </tr>
            <tr>
                <th>Acompte</th>
                <td>{{ reservation.acompte ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Caution</th>
                <td>{{ reservation.caution ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CategorieId</th>
                <td>{{ reservation.categorieId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">Retour à la liste</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
