{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<h1>Réservations</h1>

	<table class="table">
		<thead>
			<tr>
				{# <th>Id</th> #}
				{# <th>Pseudo</th> #}
				<th>Statut de la réservation</th>
				<th>Date de début de Réservation</th>
				<th class="masquer-en-mobile">Date de fin de réservation</th>
				<th class="masquer-en-mobile">Dossier de réservation n°</th>
				<th>Acompte</th>
				<th>Caution</th>
				<th class="masquer-en-mobile">Catégorie</th>
				<th>Options</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					{# <td>{{ reservation.user.pseudo }}</td> #}
					<td>{{ reservation.statut }}</td>
					<td>{{ reservation.dateResaDebut ? reservation.dateResaDebut|date('d/m/Y') : '' }}</td>
					<td class="masquer-en-mobile">{{ reservation.dateResaFin ? reservation.dateResaFin|date('d/m/Y') : '' }}</td>
					<td class="masquer-en-mobile">{{ reservation.dossierResa }}</td>
					<td>{{ reservation.acompte ? 'Oui' : 'Non' }}</td>
					<td>{{ reservation.caution ? 'Oui' : 'Non' }}</td>
					<td class="masquer-en-mobile">{{ reservation.categorie.nom }}</td>
					<td>
						{% for option in reservation.options %}
							{{ option.nom }}
						{% else %}
							Aucune option
						{% endfor %}
					</td>

					<td>
							<a class="btn-principal" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">Voir</a>
							<a class="btn-principal" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucune réservation trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

		<a class="btn-principal" href="{{ path('app_reservation_new') }}">Faites votre réservation maintenant</a>
{% endblock %}
