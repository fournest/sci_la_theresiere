{# {% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
<div >
			{# <img class="object-cover w-1/2 h-auto rounded-lg" src="{{ asset('img/image-accueil.png') }}" alt="Image d'accueil"> #}
	<div >
	
		<form class="bg-white dark:bg-gray-500 shadow-md rounded px-8 pt-6 pb-8 mb-4" method="post">

		{% if error %}
			<div class="text-red-500 font-bold dark:text-red-400">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		{# Si un utilisateur est déjà connecté, indique que l'utilisateur est connecté + bouton se déconnecter #}

		{% if app.utilisateur and app.utilisateur.isActive %}
			<div class="mb-3">
				<p>Vous êtes actuellement connecté en tant que 
				{{ app.user.userIdentifier }},</p>
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		{# Formulaire de connexion #}

		<h1 class="h3 mb-6 font-bold dark:text-white ">Connexion</h1>
			<div class="mb-4">
				<label class="block text-gray-700 dark:text-white text-sm font-bold mb-2" for="username">
					Email :
				</label>
				<input class="dark:text-white shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="_username" id="username" type="email" placeholder="Email" value="{{ last_username }}" autocomplete="email" required autofocus>
			</div>
			<div class="mb-6">
				<label class="block text-gray-700 dark:text-white text-sm font-bold mb-2" for="password">
					Mot de passe :
				</label>
				<input class="dark:text-white shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline {% if error %}border-red-500{% endif %}" name="_password" id="password" type="password" placeholder="******************" autocomplete="current-password" required>
				<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
			</div>
			<div class="flex justify-center">
				<button class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
					Se connecter
				</button>
			</div>
		</form>
		
	</div>
	</div> #}
{% endblock %}
